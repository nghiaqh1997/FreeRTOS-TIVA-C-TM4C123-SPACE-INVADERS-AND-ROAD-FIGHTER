#include "include.h"
#include "Images.h"
#include "Task_def.h"
#include "Nokia5110/SPI.h"
#include "sprite.h"
#include "FSM/FSM.h"
void vTask6(void *pvParameters){
    static int a = 0;
    int Number = 0;
    while(1){
        a++;
        Number = (476*a+Player.x+a)%15;
        if(Enemy[Number].life){
            if(Missile[Number+1].life==0){
                Missile[Number+1].life=1;
                vTaskDelay(pdMS_TO_TICKS(500));
            }
        }
    }
}



