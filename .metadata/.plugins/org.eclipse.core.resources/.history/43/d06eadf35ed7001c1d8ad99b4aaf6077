#ifndef SPRITE_H_
#define SPRITE_H_
#include "stdint.h"
typedef struct {
    uint8_t x;
    uint8_t y;
    uint8_t life;
    const uint8_t *explode;
    const uint8_t *image;
    const uint8_t *block;
}sprite;
extern sprite Player;
extern sprite Enemy[15];
extern sprite Bunker[0];
extern void Player_Init();
extern void Player_Move();
extern void Player_Draw();
extern void Bunker_Init();
extern void Bunker_Draw();
extern void Enemy_Init();
extern void Enemy_Move();
extern void Enemy_Draw();


#endif /* SPRITE_H_ */
