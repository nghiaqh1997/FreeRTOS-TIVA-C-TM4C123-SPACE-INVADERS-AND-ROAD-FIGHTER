#include "include.h"
#include "Images.h"
#include "Task_def.h"
#include "Nokia5110/SPI.h"
#include "sprite.h"
#include "FSM/FSM.h"


void vTask4(void *pvParameters){
    portTickType xLastTaskWakeTime = xTaskGetTickCount();
    while(1){
        if(Start){
            Nokia5110_ClearBuffer();
            vTaskDelayUntil(&xLastTaskWakeTime, pdMS_TO_TICKS(35));
            Nokia5110_DisplayBuffer();
        }

    }
}



