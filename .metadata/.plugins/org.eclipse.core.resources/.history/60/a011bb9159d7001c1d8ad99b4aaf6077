#ifndef SPRITE_H_
#define SPRITE_H_
typedef enum {dead,live} life;
typedef struct {
    uint8_t x;
    uint8_t y;
    life life;
    uint8_t hp;
    const uint8_t *explode;
    const uint8_t *image;
    const uint8_t *block;
}sprite;
sprite Player;
sprite Enemy[14];
sprite Bunker[2];
void Player_Init();
void Player_Move();
void PLayer_Draw();
void Bunker_Init();
void Bunker_Draw();
void Enemy_Init();
void Enemy_Move();
void Enemy_Draw();


#endif /* SPRITE_H_ */
