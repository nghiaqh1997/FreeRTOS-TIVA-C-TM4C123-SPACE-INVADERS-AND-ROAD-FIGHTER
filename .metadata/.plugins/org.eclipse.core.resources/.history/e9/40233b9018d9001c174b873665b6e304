#include "include.h"
#include "Images.h"
#include "Task_def.h"
#include "Nokia5110/SPI.h"
#include "sprite.h"
#include "FSM/FSM.h"
void prvAutoReloadTimerCallback(TimerHandle_t xTimer){
    TickType_t xTimeNow;
    xTimeNow = xTaskGetTickCount();
    static int a = 0;
    a++;
    int Number = (xTimeNow + Player.x + a)%15 ;
    //int Number = 0 + rand() % (14 + 1 - 0);
    //int Number = 14;
    if(Enemy[Number].life){
        if(Missile[Number+1].life==0){
            Missile[Number+1].life = 1;
        }
    }
}



